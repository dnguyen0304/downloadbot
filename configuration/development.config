{
  "time_zone": {
    "name": "UTC"
  },
  "queues": {
    "produce_to": {
      "administrator.profile.name": "sqs.administrator",
      "profile.name": "sqs.producer",
      "name": "RoomListWatcher_RoomFound.fifo",
      "message.delay.seconds": 0,
      "message.maximum.bytes": 65536,
      "message.retention.seconds": 1209600,
      "message.visibility.timeout.seconds": 3600
    }
  },
  "scraper": {
    "url": "http://play.pokemonshowdown.com/",
    "event":  {
      "name": "SCRAPE"
    },
    "disposer": {
      "generator": {
        "file_path": "/var/opt/roomlistwatcher/log/screenshot.png"
      }
    },
    "logger": {
      "name": "room_list_watcher"
    },
    "retry_policy": {
      "stop_strategy": {
        "maximum_attempt": 5
      },
      "wait_strategy": {
        "wait_time": 5.0
      },
      "messaging_broker": {
        "logger": {
          "name": "room_list_watcher"
        }
      }
    },
    "validator": {
      "wait_context": {
        "timeout": 1.0
      }
    },
    "wait_context": {
      "timeout": 5.0
    }
  },
  "producer": {
    "logger": {
      "name": "room_list_watcher"
    },
    "policy": {
      "stop_strategy": {
        "maximum_attempt": 3
      },
      "wait_strategy": {
        "wait_time": 5.0
      },
      "messaging_broker": {
        "logger": {
          "name": "room_list_watcher"
        },
        "event":  {
          "name": "PRODUCE"
        }
      }
    },
    "interval": 0.1
  },
  "sender": {
    "logger": {
      "name": "room_list_watcher"
    }
  },
  "filter": {
    "flush_strategy": {
      "duration": 60.0
    },
    "logger": {
      "name": "room_list_watcher"
    }
  },
  "logging": {
    "version": 1,
    "loggers": {
      "room_list_watcher": {
        "level": "DEBUG",
        "handlers": ["stream", "file"]
      }
    },
    "formatters": {
      "simple": {
        "format": "%(asctime)s.%(msecs)03d [%(levelname)s] %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "json": {
        "format": "{\"timestamp\": \"%(asctime)s.%(msecs)03d\", \"severity_level\": \"%(levelname)s\", \"message\": %(message)s}",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "stream": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "json"
      },
      "file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "DEBUG",
        "filename": "/var/opt/roomlistwatcher/log/application.log"
        "when": "midnight",
        "encoding": "utf-8",
        "formatter": "json"
      }
    }
  }
}
