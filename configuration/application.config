{
  "bot": {
    "root_url": "http://play.pokemonshowdown.com/",
    "disposer": {
      "generator": {
        "file_path": "/var/opt/downloadbot/log/screenshot.png"
      }
    },
    "finders": {
      "button": {
        "wait_context": {
          "timeout": 5.0
        }
      },
      "file_path": {
        "policy": {
          "stop_strategy": {
            "maximum_duration": 3.0
          },
          "wait_strategy": {
            "wait_time": 1.0
          },
          "messaging_broker": {
            "event": {
              "name": "DOWNLOAD_VALIDATE"
            }
          }
        }
      }
    },
    "logger": {
      "name": "downloadbot"
    },
    "policy": {
      "stop_strategy": {
        "maximum_duration": 3600.0
      },
      "wait_strategy": {
        "wait_time": 10.0
      },
      "messaging_broker": {
        "event": {
          "name": "REPLAY_DOWNLOAD"
        }
      }
    },
    "validator": {
      "wait_context": {
        "timeout": 5.0
      }
    }
  },
  "filters": [
    {
      "class": "downloadbot.infrastructure.consuming.filters.EveryFirstN",
      "n": 0
    }
  ],
  "logging": {
    "version": 1,
    "loggers": {
      "downloadbot": {
        "level": "DEBUG",
        "handlers": ["stream", "file"]
      }
    },
    "formatters": {
      "simple": {
        "format": "%(asctime)s.%(msecs)03d [%(levelname)s] %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "json": {
        "format": "{\"timestamp\": \"%(asctime)s.%(msecs)03d\", \"severity_level\": \"%(levelname)s\", \"message\": %(message)s}",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "stream": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "json"
      },
      "file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "DEBUG",
        "filename": "/var/opt/downloadbot/log/application.log",
        "when": "midnight",
        "encoding": "utf-8",
        "formatter": "json"
      }
    }
  },
  "web_driver": {
    "is_headless": false
  }
}
